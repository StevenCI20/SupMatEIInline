# these commands define
# - the source positon (- 85 cm)
# - the source to object distance (60 cm)
# - the mask thickness (100 um)
# - the detector's mask pitch (110 um, pixel pitch 55 um)
/Pepi/det/setBidimensional true
/Pepi/det/setSourcePosZ -85 cm
/Pepi/det/setSrcObjDistance 60 cm
/Pepi/det/setObjectDetDistance 120 cm
/Pepi/det/setMaskThickness 100 um
/Pepi/det/setM2Pitch 110 um
/Pepi/det/setM2Aperture 31.6 um
/Pepi/det/setRotAngle 90 deg
/Pepi/det/setAcquisitionType singlemask
/Pepi/det/setDetType 2COL
/Pepi/det/setThreshold1 13.0 keV
/Pepi/det/setThreshold2 22.0 keV
/Pepi/det/setThreshold3 0.5 keV
/Pepi/det/setThreshold4 0.5 keV
/Pepi/det/setThreshold5 0.5 keV
/Pepi/det/setThreshold6 0.5 keV
/Pepi/det/setThreshold7 0.5 keV
/Pepi/det/setThreshold8 0.5 keV
